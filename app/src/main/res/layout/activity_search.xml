<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:onClick="memberr"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/memberiv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#003565"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/member" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="회원검색"
                android:textColor="#707070"
                android:textSize="40dp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/tv_date"
                android:layout_gravity="center"
                android:background="#707070" />

            <TextView
                android:id="@+id/tv_member_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="회원정보를 검색합니다"
                android:textAlignment="viewStart"
                android:textSize="15dp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="leaderr"
        android:layout_below="@+id/cv"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/leaderll"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/leaderiv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#003565"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/leader" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_leader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="기수검색"
                android:textColor="#707070"
                android:textSize="40dp"
                android:textStyle="bold" />

            <View
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_above="@+id/tv_date"
                android:layout_gravity="center"
                android:background="#707070" />

            <TextView
                android:id="@+id/tv_leader_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="기수 단위로 검색합니다"
                android:textAlignment="viewStart"
                android:textSize="15dp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bosss"
        android:layout_below="@+id/cv2"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/boss_ll"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bossiv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#003565"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/boss" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_boss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="원장단검색"
                android:textColor="#707070"
                android:textSize="40dp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/tv_date"
                android:layout_gravity="center"
                android:background="#707070" />

            <TextView
                android:id="@+id/tv_boss_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="원장단을 검색합니다"
                android:textAlignment="viewStart"
                android:textSize="15dp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>